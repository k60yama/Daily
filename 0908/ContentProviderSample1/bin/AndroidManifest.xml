<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.contentprovidersample1"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="15" />

    <application
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        
        <provider 
            android:name="ProductContentProvider"
            android:authorities="com.example.contentprovidersample1" />
        
        <activity
            android:name=".ContentProviderSample1"
            android:label="@string/title_activity_content_provider_sample1" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>